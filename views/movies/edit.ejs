<h1>Form to edit existing movies <%- theMovie.id %></h1>

<form action="/movies/<%- theMovie.id %>?_method=put" method="post">
  <label for="name">Movie name</label>
  <input type="text" id="name" name="name" value="<%- theMovie.name%>">

  <label for="synopsis">Movie synopsis</label>
  <input type="text" id="synopsis" name="synopsis" value="<%- theMovie.synopsis%>">

  <label for="rating">Movie rating</label>
  <input type="tel" id="rating" name="rating" value="<%- theMovie.rating%>">

  <button type="submit">Update</button>
</form>
